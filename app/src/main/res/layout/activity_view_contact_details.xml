<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".ViewContactDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idIVContact"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@drawable/baseline_account_circle_24"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/white"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/idTVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVContact"
        android:paddingTop="7dp"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/idTVPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/idTVName"
        android:paddingTop="7dp"
        android:text="Phone Number"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/idIVCall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="400dp"
        android:padding="4dp"
        android:src="@mipmap/call_icon_round" />

    <ImageView
        android:id="@+id/idIVVideo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="300dp"
        android:padding="4dp"
        android:src="@mipmap/video_icon_round" />

    <ImageView
        android:id="@+id/idIVMessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="300dp"
        android:padding="4dp"
        android:src="@mipmap/message_icon_round" />

    <ImageView
        android:id="@+id/idIVMail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="400dp"
        android:padding="4dp"
        android:src="@mipmap/email_icon_round" />

</RelativeLayout>