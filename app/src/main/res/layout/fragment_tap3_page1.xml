<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.Tap3_Page1Fragment">

    <TextView
        android:id="@+id/ei_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text=""
        android:padding="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 평소 주변정리나 일정 관리를 잘 하는 편인가요?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/yes_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
        <RadioButton
            android:id="@+id/no_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니오"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
    </RadioGroup>


    <TextView
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 현실과 동떨어진 얘기를 하는 것에 관심이 있나요?"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/yes_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
        <RadioButton
            android:id="@+id/no_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니오"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회사일이나 공부를 할때 예외상황이 생기는 것을 극도로 싫어하나요?"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/yes_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
        <RadioButton
            android:id="@+id/no_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니오"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".Tap3_Page1"
        android:textColor="@color/white"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/before1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전" />
        <Button
            android:id="@+id/after1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음" />

    </LinearLayout>

</LinearLayout>